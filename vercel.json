{
  "version": 2,
  "buildCommand": false,
  "installCommand": "pnpm install",
  "builds": [
    {
      "src": "apps/backend-repo/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/frontend-repo",
      "use": "@vercel/next"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "apps/backend-repo/src/index.ts"
    },
    {
      "source": "/:path*",
      "destination": "apps/frontend-repo"
    }
  ]
}
